@model ForgetPasswordViewModel
@{
    ViewBag.Title = "Forget Password | Rewrite Code";
}


<section class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center
      min-vh-100 g-0">
        <div class="col-12 col-md-8 col-lg-4 border-top border-3 border-dark">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-4">
                        <h5>Forgot Password?</h5>
                        <p class="mb-2">
                            Enter your registered email to reset the password
                        </p>
                    </div>
                    <form>
                        <div class="mb-3 form-floating">
                            <input type="email" class="form-control" id="floatingEmailInput" asp-for="Email" placeholder="Enter Your Email">
                            <label asp-for="Email" for="floatingEmailInput" class="form-label">Email address</label>
                        </div>
                        <div class="mb-3 d-grid">
                            <button asp-controller="Autorization" asp-action="ResetPassword" type="submit" class="btn btn-outline-dark">
                                Reset Password
                            </button>
                        </div>
                        <span>Don't have an account? <a class="text-dark" asp-controller="Autorization" asp-action="SignUp">Sign in</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>