@model LoginViewModel
@{
    ViewBag.Title = "Log In | Rewrite Code";
}

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-dark"></div>
                <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-3 mt-md-4 needs-validation" novalidate>
                            <h2 class="fw-bold mb-2 text-uppercase ">Войти</h2>
                            <p class=" mb-5">Пожалуйста, введите свой e-mail и пароль!</p>
                            <div class="mb-3 form-floating">
                                <input type="email" class="form-control" id="floatingEmailInput" asp-for="Email" placeholder="name@example.com">
                                <label asp-for="Email" for="floatingEmailInput" class="form-label">Email адрес</label>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3 form-floating">
                                <input type="password" class="form-control" id="floatingPasswordInput" asp-for="Password" placeholder="*******">
                                <label asp-for="Password" for="floatingPasswordInput" class="form-label">Пароль</label>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            @* <p class="small"><a class="text-dark" asp-controller="Autorization" asp-action="ForgetPassword">Forgot password?</a></p> *@
                            <div class="d-grid">
                                <button formmethod="post" class="btn btn-outline-dark" type="submit">Войти</button>
                            </div>
                        </form>
                        <div>
                            <p class="mb-0 text-center">
                                У вас нет аккаунта? <a asp-area="" asp-controller="Autorization" asp-action="SignUp" class="text-dark fw-bold">Зарегистрироваться</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>