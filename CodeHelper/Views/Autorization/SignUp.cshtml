@model SignUpViewModel
@{
    ViewBag.Title = "Sing Up | Rewrite Code";
}

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-light"></div>
                <div class="card main-bg-color shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-3 mt-md-4 needs-validation" novalidate>
                            <h2 class="fw-bold mb-2 text-uppercase">Sing Up</h2>

                            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

                            <div class="mb-3 form-floating">
                                <input asp-for="UserName" type="text" class="form-control second-bg-color secondary-focus" id="floatingUserNameInput" placeholder="Name">
                                <label asp-for="UserName" class="form-label front-color" for="floatingUserNameInput">Name</label>
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input type="email" class="form-control second-bg-color secondary-focus" id="floatingEmailInput" asp-for="Email" placeholder="name@example.com">
                                <label asp-for="Email" for="floatingEmailInput" class="form-label front-color">Email address</label>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input asp-for="Password" type="password" id="floatingPasswordInput" class="form-control second-bg-color secondary-focus" placeholder="*******">
                                <label asp-for="Password" for="floatingPasswordInput" class="form-label front-color">Password</label>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input asp-for="RepeatPassword" type="password" id="floatingRepeatPasswordInput" class="form-control second-bg-color secondary-focus" placeholder="*******">
                                <label asp-for="RepeatPassword" for="floatingRepeatPasswordInput" class="form-label front-color">Repeat Password</label>
                                <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                            </div>

                            <div class="d-grid mt-5">
                                <button formmethod="post" class="btn btn-outline-light secondary-focus" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>