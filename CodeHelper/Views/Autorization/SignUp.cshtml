@model SignUpViewModel

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-dark"></div>
                <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-3 mt-md-4 needs-validation" novalidate>
                            <h2 class="fw-bold mb-2 text-uppercase">@ViewData["Title"]</h2>

                            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label">Name</label>
                                <input asp-for="UserName" type="text" class="form-control">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="*******">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="RepeatPassword" class="form-label">Repeat Password</label>
                                <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="*******">
                                <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                            </div>
                            <div class="d-grid mt-5">
                                <button formmethod="post" class="btn btn-outline-dark" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>