@model SignUpViewModel
@{
    ViewBag.Title = "Sing Up | Rewrite Code";
}

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-dark"></div>
                <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-3 mt-md-4 needs-validation" novalidate>
                            <h2 class="fw-bold mb-2 text-uppercase">Регистрация</h2>

                            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

                            <div class="mb-3 form-floating">
                                <input asp-for="UserName" type="text" class="form-control" id="floatingUserNameInput" placeholder="Name">
                                <label asp-for="UserName" class="form-label" for="floatingUserNameInput">Имя</label>
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input type="email" class="form-control" id="floatingEmailInput" asp-for="Email" placeholder="name@example.com">
                                <label asp-for="Email" for="floatingEmailInput" class="form-label">Email адрес</label>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input asp-for="Password" type="password" id="floatingPasswordInput" class="form-control" placeholder="*******">
                                <label asp-for="Password" for="floatingPasswordInput" class="form-label">Пароль</label>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="mb-3 form-floating">
                                <input asp-for="RepeatPassword" type="password" id="floatingRepeatPasswordInput" class="form-control" placeholder="*******">
                                <label asp-for="RepeatPassword" for="floatingRepeatPasswordInput" class="form-label">Повторите Пароль</label>
                                <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                            </div>

                            <div class="d-grid mt-5">
                                <button formmethod="post" class="btn btn-outline-dark" type="submit">Войти</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>